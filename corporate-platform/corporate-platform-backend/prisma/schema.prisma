generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RetirementPurpose {
  SCOPE_1
  SCOPE_2
  SCOPE_3
  CORPORATE
  EVENTS
  PRODUCT
}

model Company {
  id                      String              @id @default(cuid())
  name                    String
  annualRetirementTarget  Float               @default(0)
  netZeroTarget           Float               @default(0)
  netZeroTargetYear       Int?
  
  retirements             Retirement[]
  retirementTargets       RetirementTarget[]
  users                   User[]
  bids                    Bid[]

  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt

  @@map("companies")
}

model Credit {
  id                    String    @id @default(cuid())
  projectName           String
  projectId             String?
  project               Project?  @relation(fields: [projectId], references: [id])
  
  // Credit Details
  pricePerTon           Float
  availableAmount       Int
  totalAmount           Int
  status                String    // available, reserved, retired, pending
  
  // Quality Metrics
  dynamicScore          Int       @default(0) // 0-100 composite score
  verificationScore     Int?      // 0-100
  additionalityScore    Int?
  permanenceScore       Int?
  leakageScore          Int?
  cobenefitsScore       Int?
  transparencyScore     Int?
  
  // Metadata
  methodology           String
  vintage               Int
  verificationStandard  String
  lastVerification      DateTime
  country               String
  sdgs                  Int[]     // Array of SDG numbers
  
  // Blockchain
  assetCode             String?
  issuer                String?
  contractId            String?
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  // Relations
  retirements           Retirement[]
  auctions              Auction[]
  
  @@index([status])
  @@index([country])
  @@index([methodology])
  @@index([vintage])
  @@index([dynamicScore])
}

model Project {
  id                    String    @id @default(cuid())
  name                  String
  description           String?
  country               String
  region                String?
  
  // Classification
  type                  String    // forestry, renewable, agriculture, bluecarbon, cookstoves, methane
  methodology           String
  verificationStandard  String
  
  // Impact
  totalCredits          Int
  availableCredits      Int
  avgScore              Float
  communities           Int?      // People benefited
  sdgs                  Int[]
  
  // Timeline
  startDate             DateTime
  endDate               DateTime?
  lastVerification      DateTime
  
  // Metadata
  status                String    // active, completed, pending
  developer             String?
  website               String?
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  // Relations
  credits               Credit[]
  
  @@index([country])
  @@index([type])
  @@index([status])
}

model Retirement {
  id                String              @id @default(cuid())
  companyId         String
  company           Company             @relation(fields: [companyId], references: [id])
  userId            String              // User who performed retirement
  user              User                @relation(fields: [userId], references: [id])
  creditId          String
  credit            Credit              @relation(fields: [creditId], references: [id])

  // Retirement details
  amount            Float
  purpose           String              // scope1, scope2, scope3, corporate, events, product
  purposeDetails    String?             // Additional context

  // Pricing
  priceAtRetirement Float

  // Certificate details
  certificateId     String?             @unique
  certificateUrl    String?

  // Blockchain
  transactionHash   String?
  transactionUrl    String?
  verifiedAt        DateTime?

  // Metadata
  retiredAt         DateTime            @default(now())

  // Relations
  certificate       RetirementCertificate?

  @@index([companyId])
  @@index([userId])
  @@index([creditId])
  @@index([purpose])
  @@index([retiredAt])
}

model RetirementCertificate {
  id                String    @id @default(cuid())
  retirementId      String    @unique
  retirement        Retirement @relation(fields: [retirementId], references: [id])

  certificateNumber String    @unique // e.g., "RET-2024-001234"
  pdfUrl            String
  ipfsHash          String?   // IPFS storage for permanence

  // Certificate data (snapshot)
  companyName       String
  retirementDate    DateTime
  creditProject     String
  creditAmount      Int
  creditPurpose     String
  transactionHash   String?

  createdAt         DateTime  @default(now())
}

model RetirementTarget {
  id          String   @id @default(cuid())
  companyId   String
  year        Int
  month       Int
  target      Float

  company     Company  @relation(fields: [companyId], references: [id])

  @@unique([companyId, year, month])
  @@map("retirement_targets")
}

model User {
  id                  String    @id @default(cuid())
  email               String    @unique
  password            String
  firstName           String
  lastName            String
  role                String    @default("viewer")
  companyId           String
  company             Company   @relation(fields: [companyId], references: [id])
  refreshToken        String?
  lastLoginAt         DateTime?
  lastLoginIp         String?
  isActive            Boolean   @default(true)
  emailVerified       Boolean   @default(false)
  passwordResetToken  String?
  passwordResetExpires DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  sessions            Session[]
  retirements         Retirement[]
  bids                Bid[]

  @@unique([companyId, email])
  @@index([email])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  refreshToken String   @unique
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime
  isValid      Boolean  @default(true)
  createdAt    DateTime @default(now())
  lastUsedAt   DateTime?

  @@index([refreshToken])
  @@index([expiresAt])
}

model Auction {
  id              String   @id @default(cuid())
  creditId        String
  credit          Credit   @relation(fields: [creditId], references: [id])
  
  // Auction parameters
  quantity        Int      // Total credits for auction
  remaining       Int      // Credits still available
  
  // Pricing
  startPrice      Float
  currentPrice    Float
  floorPrice      Float
  priceDecrement  Float    // Amount price drops each interval
  decrementInterval Int    // Minutes between price drops
  
  // Timing
  startTime       DateTime
  endTime         DateTime
  lastPriceUpdate DateTime
  
  // Status
  status          String   // pending, active, ended, settled, cancelled
  
  // Results
  winnerId        String?  // User ID of winner
  finalPrice      Float?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  bids            Bid[]
  
  @@index([status])
  @@index([creditId])
  @@index([endTime])
}

model Bid {
  id          String   @id @default(cuid())
  auctionId   String
  auction     Auction  @relation(fields: [auctionId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  bidPrice    Float
  quantity    Int
  status      String   // pending, accepted, rejected, outbid
  createdAt   DateTime @default(now())

  @@index([auctionId])
  @@index([userId])
}
